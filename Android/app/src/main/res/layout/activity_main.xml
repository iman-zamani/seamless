<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#121212">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seamless"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="#EEEEEE"
        android:textColorHint="#888888"
        android:backgroundTint="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/btnSendMode"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Send Files"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"/>

        <Button
            android:id="@+id/btnReceiveMode"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Receive Files"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:backgroundTint="#00E676"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:text="1. Select File"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnPickFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick File"
            android:backgroundTint="#333333"/>

        <TextView
            android:id="@+id/tvSelectedFile"
            android:text="No file selected"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

        <TextView
            android:text="2. Select Device"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Network"
            android:backgroundTint="#555555"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1E1E1E"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/deviceListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <Button
            android:id="@+id/btnBackFromSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#333333"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiveLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:text="Waiting for sender..."
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#00E676" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:text="Listening..."/>

        <Button
            android:id="@+id/btnBackFromReceive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop &amp; Back"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>